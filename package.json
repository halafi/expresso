{
  "name": "expresso",
  "version": "1.0.0",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && npm run babel",
    "start": "NODE_ENV=development npm run prebuild && npm run babel:dev && run-p watch:*",
    "start:prod": "node dist",
    "babel": "NODE_ENV=production babel src --verbose -d dist --extensions '.ts' --ignore '**/__tests__/*'",
    "babel:dev": "babel src --verbose -d dist --extensions '.ts' --ignore '**/__tests__/*'",
    "watch:server": "nodemon dist/index",
    "watch:src": "babel src --verbose --skip-initial-build -d dist --extensions '.ts' --ignore '**/__tests__/*' --watch --source-maps inline",
    "types": "tsc",
    "eslint": "eslint --ext .ts src",
    "lint": "npm run eslint && npm run types",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "engines" : { "node" : ">=12.16.3" },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "jest": "^25.5.4",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.9.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  }
}
